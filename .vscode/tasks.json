{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "python: ejecutar archivo",
      "type": "shell",
      "command": "python",
      "args": [
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "npm: start",
      "type": "shell",
      "command": "npm",
      "args": [
        "start"
      ],
      "cwd": "${workspaceFolder}\\margarita.installer",
      "isBackground": false,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}